{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageaccountier": {
            "type": "string",
            "metadata": {
                "description": "Tieeer of storage account"
            },
            "defaultValue": "Premium",
            "allowedValues": [
                     "Premium",
                     "Standard"
            ]
        }
    },
    "functions": [],
    "variables": {
        "ResourceName": "sanketdemoresource"
    },
    "resources": [
        {
            "name": "[variables('ResourceName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "tags": {
                "displayName": "practicestorage"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Premium_LRS",
                "tier": "[parameters('storageaccountier')]"
            }
        }
    ],
    "outputs": {}
}